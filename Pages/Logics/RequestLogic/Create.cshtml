@page
@model ApprovalProcess.Pages.Logics.CreateModel
@{
}

<h4>Raise new Purchase Order</h4>

<div class="table table-bordered">
    <form method="post" enctype="multipart/form-data" class="m-1">
        <div asp-validation-summary="All" class=" text-danger"></div>
        @*<div>
            <label asp-for="@Model.RequestObj.RequestId" class="form-control"></label>
            <input asp-for="@Model.RequestObj.RequestId" readonly class="form-control" />
            <span asp-validation-for="@Model.RequestObj.RequestId"></span>
        </div>*@



        <div>
            <label asp-for="@Model.RequestObj.RequesterName" class="form-control"></label>
            <input asp-for="@Model.RequestObj.RequesterName" autocomplete="off" class="form-control" />
            <span asp-validation-for="@Model.RequestObj.RequesterName"></span>
        </div>

        <div>
            <label asp-for="@Model.RequestObj.DepartmentId" class="form-control"></label>
            <select asp-for="@Model.RequestObj.DepartmentId" asp-items="Model.Deptdropdown">
                <option>Select Department </option>
            </select>
        </div>

        <div>
            <label asp-for="@Model.RequestObj.VendorId" class="form-control"></label>
            <select asp-for="@Model.RequestObj.VendorId" asp-items="Model.Vendordropdown">
                <option>
                    Select Vendor
                </option>  
            </select>
        </div>
        <div>
            <label asp-for="@Model.RequestObj.RequestDescription" class="form-control"></label>
            <input asp-for="@Model.RequestObj.RequestDescription" autocomplete="off" class="form-control" />
            <span asp-validation-for="@Model.RequestObj.RequestDescription"></span>
        </div>
        <div>
            <label asp-for="@Model.RequestObj.RequestAmount" class="form-control"></label>
            <input asp-for="@Model.RequestObj.RequestAmount" autocomplete="off" class="form-control" />
            <span asp-validation-for="@Model.RequestObj.RequestAmount"></span>
        </div>


        <div>
            <label asp-for="@Model.RequestObj.SupportingDoc" class="form-control"></label>
            <input asp-for="@Model.RequestObj.SupportingDoc" autocomplete="off" class="form-control" />
            <span asp-validation-for="@Model.RequestObj.SupportingDoc"></span>
        </div>

        <div>
            <label asp-for="@Model.RequestObj.StatusId" class="form-control"></label>
            <select asp-for="@Model.RequestObj.StatusId" asp-items="Model.StatusDropDown">
                <option>
                    Select Status
                </option>
            </select>
        </div>

        <div>
            <label asp-for="@Model.RequestObj.Image" class="form-control"></label>
            <div class="custom-file">
                <input asp-for="@Model.RequestObj.Image" max="100kb" class="custom-file-input" id="customFile" />
                <label class="custom-file-label" for="customFile">Choose file</label>
                <span asp-validation-for="@Model.RequestObj.Image"></span>
            </div>
        </div>


        <br />
        <div>
            <input type="submit" name="name" value="Submit" class="btn btn-primary" />
            <a href="/Logics/RequestLogic/List" class="btn btn-outline-primary">Back to List of PO</a>
        </div>
    </form>

</div>


   
