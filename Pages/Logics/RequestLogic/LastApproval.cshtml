@page
@model ApprovalProcess.Pages.Logics.RequestLogic.LastApprovalModel
@{
}

<h3> Managing Director</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Requester</th>
            <th>Dept</th>
            <th>Vendor</th>
            <th>Details</th>
            <th>Amount</th>
            <th>Date</th>
            <th>SupDoc</th>
            <th>Status</th>
            <th>Remark</th>
            <th>LMgr</th>
            <th>FDir</th>
            <th>MD/CEO</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.RequestObj)
        {
        <tr>
            @*<td>@item.RequestId</td> *@
            <td>@item.RequesterName</td>
            <td>@item.Department.Name </td>
            <td>@item.Vendor.VendorName</td>
            <td>@item.RequestDescription</td>
            <td>@item.RequestAmount</td>
            <td>@item.RequestedDate </td>
            <td>@item.SupportingDoc</td>
            <td>@item.Status.Name </td>
            <td>@item.Remark</td>
            <td>@item.LineManager</td>
            <td>@item.FinanceDirector</td>
            <td>@item.ManagingDirector</td>                
          
           <td> <a href="/Logics/RequestLogic/LastApprovalUpdate?id=@item.RequestId" class="btn btn-outline-primary">Review</a> </td>
            @*<td> <a href="/Logics/RequestLogic/Delete?id=@item.RequestId" onclick="return confirm('Do you want to delete this?')" class="btn btn-outline-primary">Delete</a> </td>*@
        </tr>
        
            
        }

    </tbody>
</table>    
