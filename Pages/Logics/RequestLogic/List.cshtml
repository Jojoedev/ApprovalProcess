@page
@model ApprovalProcess.Pages.ListModel
@{
}
<h3>List of Purchase Orders</h3>

@if(Model.RequestObj.Count > 0)
            {
<table class="table table-bordered">
    <thead>
        <tr>

            <th>Requester</th>
            <th>Department</th>
            <th>Vendor</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Support Doc</th>
            <th>Status</th>
            <th>Remark</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.RequestObj)
        {
        <tr>
            @*<td>@item.RequestId</td> *@
            <td>@item.RequesterName</td>
            <td>@item.Department.Name </td>
            <td>@item.Vendor.VendorName</td>
            <td>@item.RequestDescription</td>
            <td>@item.RequestAmount</td>
            <td>@item.RequestedDate </td>
            <td>@item.SupportingDoc</td>
            <td>@item.Status.Name </td>
            <td>@item.Remark</td>
            
            <td> <a href="/Logics/RequestLogic/Update?id=@item.RequestId" class="btn btn-outline-primary">Review</a> </td>
            @*<td> <a href="/Logics/RequestLogic/Delete?id=@item.RequestId" onclick="return confirm('Do you want to delete this?')" class="btn btn-outline-primary">Delete</a> </td>*@
        </tr> 
        }

    </tbody>
</table>      }
            else
            {
                <h3> No list exists </h3>
            }

